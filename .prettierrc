  "trailingComma": "all",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "jsxSingleQuote": true,
  "singleQuote": true,
  "parser": "typescript",
  "semi": false,
  "quoteProps": "preserve",
  "arrowParens": "avoid",
  "overrides": [
      {
        "files": "*.json",
        "options": {
          "trailingComma": "none",
          "singleQuote": false,
          "semi": false
        }
      }
    ]  
}